<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.noonbamboo.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterControl</servlet-name>
        <servlet-class>com.noonbamboo.servlet.RegisterControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterControl</servlet-name>
        <url-pattern>/RegisterControl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>com.noonbamboo.servlet.LoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/LoginControl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUserControl</servlet-name>
        <servlet-class>com.noonbamboo.servlet.DeleteUserControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserControl</servlet-name>
        <url-pattern>/DeleteUserControl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUserControl</servlet-name>
        <servlet-class>com.noonbamboo.servlet.UpdateUserControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserControl</servlet-name>
        <url-pattern>/UpdateUserControl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowUpdateUser</servlet-name>
        <servlet-class>com.noonbamboo.servlet.ShowUpdateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowUpdateUser</servlet-name>
        <url-pattern>/ShowUpdateUser</url-pattern>
    </servlet-mapping>
</web-app>